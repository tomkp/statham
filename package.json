{
  "name": "statham",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start:dev": "NODE_ENV=development node server.js",
    "build:dev": "NODE_ENV=development webpack --config webpack.config.dev.js -d --colors",
    "build:prod": "NODE_ENV=production webpack --config webpack.config.prod.js -p --colors",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test mocha --require ignore-styles --require babel-register './test/unit/**/*.js'",
    "test:unit:watch": "npm run test:unit -- -w",
    "test:ui": "nightwatch",
    "deploy": "npm run build:prod && surge dist statham.surge.sh"
  },
  "keywords": [],
  "author": "tom@tomkp.com",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "ava": "^0.16.0",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.0",
    "clean-webpack-plugin": "^0.1.10",
    "css-loader": "^0.23.1",
    "enzyme": "^2.4.1",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.22.0",
    "ignore-styles": "^4.0.0",
    "jsdom": "9.4.2",
    "jsdom-global": "2.0.0",
    "live-server": "^1.0.0",
    "mocha": "^3.0.1",
    "nightwatch": "^0.9.6",
    "postcss": "^5.1.1",
    "postcss-color-function": "^2.0.1",
    "postcss-loader": "^0.9.1",
    "precss": "^1.4.0",
    "react-addons-test-utils": "^15.3.0",
    "style-loader": "^0.13.1",
    "surge": "^0.18.0",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.12.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "es6-promise": "^3.2.1",
    "history": "^3.0.0",
    "normalize.css": "^4.2.0",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "redux": "^3.5.2"
  },
  "ava": {
    "babel": "inherit",
    "tap": true,
    "verbose": true,
    "files": [
      "test/unit/**/*.spec.js"
    ],
    "require": [
      "babel-register"
    ]
  }
}
